<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView android:text="@string/hello_world" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewStatus" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="On"
        android:id="@+id/buttonServiceOn"
        android:layout_below="@+id/textViewStatus"
        android:width="80dp"
        android:layout_alignParentStart="true"
        android:layout_marginTop="30dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Off"
        android:id="@+id/buttonServiceOff"
        android:width="80dp"
        android:layout_alignTop="@+id/buttonServiceOn"
        android:layout_toEndOf="@+id/buttonServiceOn" />

    <cn.nec.nlc.example.jamesli.servicetest05intentservice.DirectionView
        android:id="@+id/directionView"
        android:layout_below="@+id/buttonServiceOn"
        android:layout_marginTop="30dp"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />

</RelativeLayout>
