<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView
        android:text="Status: Off"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewStatus" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="On"
        android:id="@+id/buttonOn"
        android:layout_below="@+id/textViewStatus"
        android:layout_alignParentStart="true"
        android:layout_marginTop="25dp"
        android:enabled="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Off"
        android:id="@+id/buttonOff"
        android:layout_below="@+id/buttonOn"
        android:layout_alignParentStart="true"
        android:enabled="false" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewGyroY"
        android:layout_below="@+id/buttonOff"
        android:layout_alignParentStart="true"
        android:layout_marginTop="25dp"
        android:text="@string/text_gyroy_na" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewGyroP"
        android:layout_below="@+id/textViewGyroY"
        android:layout_alignParentStart="true"
        android:layout_marginTop="25dp"
        android:text="@string/text_gyrop_na" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewGyroR"
        android:layout_below="@+id/textViewGyroP"
        android:layout_alignParentStart="true"
        android:layout_marginTop="25dp"
        android:text="@string/text_gyror_na" />

</RelativeLayout>
