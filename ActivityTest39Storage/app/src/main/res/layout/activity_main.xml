<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView
        android:id="@+id/textViewHello"
        android:text="@string/hello_world"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/buttonWriteInFile"
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:text="@string/button_write_file"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textViewHello"
        android:onClick="onClickWriteFile" />

    <Button
        android:id="@+id/buttonWritePref"
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:text="@string/button_write_pref"
        android:layout_below="@+id/buttonWriteInFile"
        android:layout_alignParentStart="true"
        android:onClick="onClickWritePref" />

</RelativeLayout>
