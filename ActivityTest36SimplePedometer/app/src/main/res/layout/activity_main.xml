<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView
        style="@style/GreenText"
        android:text="@string/textview_stepcounter_initial"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewStepCounter"
        android:layout_marginTop="15dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_start"
        android:id="@+id/buttonStart"
        android:layout_below="@+id/textViewStepCounter"
        android:layout_alignParentStart="true"
        android:layout_marginTop="35dp"
        android:onClick="onClickStartButton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_reset"
        android:id="@+id/buttonReset"
        android:layout_alignTop="@+id/buttonStart"
        android:layout_toEndOf="@+id/buttonStart"
        android:layout_marginLeft="25dp"
        android:onClick="onClickResetButton" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Android Pedo Counter: "
        android:id="@+id/textViewDisplayAndroidPedo"
        android:layout_below="@+id/buttonStart"
        android:layout_alignParentStart="true"
        android:layout_marginTop="35dp" />

</RelativeLayout>
